{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@erp/auth": ["../../packages/auth/src"],
      "@erp/layout": ["../../packages/layout/src"],
      "@erp/ui": ["../../packages/ui/src"],
      "@erp/config": ["../../packages/config"],
      "@erp/types": ["../../packages/types"],
      "@erp/utils": ["../../packages/utils"],
      "@erp/theme": ["../../packages/erp-theme"]
    }
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
